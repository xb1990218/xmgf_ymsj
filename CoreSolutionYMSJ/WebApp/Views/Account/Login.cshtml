@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登录-信息收集系统</title>
    <link href="/lib/layui/css/layui.css" rel="stylesheet" />
    <script src="/js/jquery-3.4.1.min.js"></script>
    <script src="/lib/layui/layui.js"></script>
    <script src="/js/md5.js"></script>
    <style type="text/css">
        * {
            margin: 0;
            padding: 0;
            text-decoration: none;
            list-style: none;
        }

        html, body {
            height: 100%;
        }

        .main {
            width: 100%;
            height: 100%;
            background-color: #F2F2F2;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login {
            width: 25%;
            height: 300px;
            display: flex;
            flex-direction: column;
            justify-content: space-around;
            margin-top: -100px;
        }

        .top {
            width: 100%;
            height: 50px;
            text-align: center;
            line-height: 50px;
            font-size: 25px;
        }

        .username {
            width: 100%;
            height: 50px;
            line-height: 50px;
        }

        .password {
            width: 100%;
            height: 50px;
        }

        .btnlogin {
            width: 100%;
            height: 50px;
            background-color: #007DDB;
        }

        .login input {
            height: 50px;
        }

        .btnlogin button {
            width: 100%;
            height: 50px;
        }
    </style>
    <script type="text/javascript">
        $(function () {
            layui.use('layer', function () {
                var layer = layui.layer;

                //点击登录
                $("#btnLogin").on("click", function () {
                    var username = $("#userName").val();
                    if (username == "") {
                        layer.msg("请输入用户名", { icon: 5 });
                        $("#userName").focus();
                        return;
                    }

                    var password = $("#password").val();
                    if (password == "") {
                        layer.msg("请输入密码", { icon: 5 });
                        $("#password").focus();
                        return;
                    }
                    var md5pass=hex_md5(password);
                    //发送异步到后台验证
                    $.ajax({
                        url: "/Account/LoginIn",
                        type: "post",
                        datatype: "json",
                        data: { username: username, password: md5pass },
                        success: function (data) {
                            if (data.result == true) {
                                layer.msg("登录成功！", { icon: 1,time: 1000  }, function () {
                                    //window.location.href = "/Home/Index";
                                    location.replace("/Home/Index");
                                });
                            }
                            else {
                                layer.msg(data.msg, { icon: 5});
                                return;
                            }
                        },
                        error: function (jqXHR) {

                        }
                    });
                });
            });
        });
    </script>
</head>
<body>
    <div class="main">
        <div class="login">
            <div class="top">
                信息收集系统登录
            </div>
            <div class="username">
                <input type="text" id="userName" name="userName" placeholder="请输入用户名" class="layui-input">
            </div>
            <div class="password">
                <input type="password" id="password" name="password" placeholder="请输入密码" class="layui-input">
            </div>
            <div class="btnlogin">
                <button class="layui-btn layui-btn-lg" id="btnLogin">登入</button>
            </div>
        </div>
    </div>
</body>
</html>